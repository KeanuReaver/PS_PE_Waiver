[~[tlist_sql;
    SELECT
        u_ucsd_pe_waiver.id             AS waiverid,
        u_ucsd_pe_waiver.start_date     AS peStart,
        u_ucsd_pe_waiver.end_date       AS peEnd,
        u_ucsd_pe_waiver.reason         AS reason,
        REPLACE(                                      
            REPLACE(                                 
                REPLACE(                              
                    REPLACE(                          
                        REPLACE(                      
                            REPLACE(                  
                                NVL(u_ucsd_pe_waiver.comments, ''),
                                CHR(92), CHR(92) || CHR(92)
                            ),
                            CHR(13) || CHR(10), CHR(92) || 'n'
                        ),
                        CHR(13), CHR(92) || 'n'
                    ),
                    CHR(10), CHR(92) || 'n'
                ),
                CHR(9), CHR(92) || 't'
            ),
            CHR(34), CHR(92) || CHR(34)
        )                               AS comments,
        u_ucsd_pe_waiver.author         AS author
    FROM
        u_ucsd_pe_waiver
    WHERE
        u_ucsd_pe_waiver.studentsdcid = ~(gpv.studentdcid);
]{
   "waiverid": "~(waiverid)",
   "peStart": "~(peStart)",
   "peEnd": "~(peEnd)",
   "reason": "~(reason)",
   "comments": "~(comments)",
   "author": "~(author)"
},[/tlist_sql]{}]